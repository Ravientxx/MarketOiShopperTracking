<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF00FF00"
        android:id="@+id/line"
        android:layout_below="@+id/backBtn_2"
        android:layout_alignParentEnd="true" />

    <View android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/circle_online"
        android:id="@+id/circle"
        android:layout_marginEnd="7dp"
        android:layout_alignTop="@+id/statusOrder"
        android:layout_toStartOf="@+id/statusOrder"
        android:layout_marginTop="6dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Back"
        android:id="@+id/backBtn_2"
        android:background="@drawable/blue_button"
        style="@style/back_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CheckPoints"
        android:id="@+id/checkPoints"
        android:layout_marginTop="90dp"
        android:background="@drawable/green_button"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Order"
        android:id="@+id/viewOrder"
        android:layout_marginTop="40dp"
        android:background="@drawable/green_button"
        android:layout_below="@+id/checkPoints"
        android:layout_alignStart="@+id/checkPoints" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:id="@+id/rate"
        android:layout_marginTop="37dp"
        android:background="@drawable/gray_button"
        android:layout_below="@+id/viewOrder"
        android:layout_alignStart="@+id/viewOrder"
        android:clickable="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Order"
        android:textSize="16sp"
        android:layout_gravity="center_vertical|left"
        android:layout_alignTop="@+id/backBtn_2"
        android:layout_alignEnd="@+id/checkPoints"
        android:layout_marginEnd="21dp" />

    <TextView
        android:id="@+id/idOrder"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:text="#id"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="started"
        android:id="@+id/statusOrder"
        android:layout_gravity="right|top"
        android:layout_below="@+id/line"
        android:layout_alignEnd="@+id/line" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/textNote"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/textNote"
        android:id="@+id/textAddress"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/textAddress"
        android:id="@+id/textPhone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/textPhone"
        android:id="@+id/textName"/>


</RelativeLayout>
